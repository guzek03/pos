<div class="main-sidebar sidebar-style-2">
  <aside id="sidebar-wrapper">
    <div class="sidebar-brand">
      <a href="<%= root_path %>">
        <span class="logo-name">POS</span>
      </a>
    </div>
    <ul class="sidebar-menu">
      <li class="dropdown <%= params[:controller] == 'home' ? 'active' : '' %>">
        <a href="<%= root_path %>" class="nav-link"><i class="fab fa-dashcube"></i><span>Dashboard</span></a>
      </li>
      <li class="dropdown 
        <%= 
          params[:controller] == 'items' || params[:controller] == 'uoms' || params[:controller] == 'payments' || params[:controller] == 'taxes' ||
          params[:controller] == 'prices' || params[:controller] == 'stocks' ? 
          'active' : '' %>
        ">
        <a href="#" class="menu-toggle nav-link has-dropdown"><i class="far fa-sun"></i><span>Master Data</span></a>
        <ul class="dropdown-menu">
          <li class="<%= params[:controller] == 'items' ? 'active' : '' %>">
            <a href="<%= items_path %>" class="nav-link <%= params[:controller] == 'items' ? 'toggled' : '' %>">
              <span>Item</span>
            </a>
          </li>
          <li class="<%= params[:controller] == 'uoms' ? 'active' : '' %>">
            <a href="<%= uoms_path %>" class="nav-link <%= params[:controller] == 'uoms' ? 'toggled' : '' %>">
              <span>UoM</span>
            </a>
          </li>
          <li class="<%= params[:controller] == 'payments' ? 'active' : '' %>">
            <a href="<%= payments_path %>" class="nav-link <%= params[:controller] == 'payments' ? 'toggled' : '' %>">
              <span>Payment</span>
            </a>
          </li>
          <li class="<%= params[:controller] == 'taxes' ? 'active' : '' %>">
            <a href="<%= taxes_path %>" class="nav-link <%= params[:controller] == 'taxes' ? 'toggled' : '' %>">
              <span>Tax</span>
            </a>
          </li>
          <li class="<%= params[:controller] == 'prices' ? 'active' : '' %>">
            <a href="<%= prices_path %>" class="nav-link <%= params[:controller] == 'prices' ? 'toggled' : '' %>">
              <span>Price</span>
            </a>
          </li>
          <li class="<%= params[:controller] == 'stocks' ? 'active' : '' %>">
            <a href="<%= stocks_path %>" class="nav-link <%= params[:controller] == 'stocks' ? 'toggled' : '' %>">
              <span>Stock</span>
            </a>
          </li>
        </ul>
      </li>
      <li class="dropdown 
        <%= 
          params[:controller] == 'receptions' || params[:controller] == 'order_headers' ? 
          'active' : '' %>
        ">
        <a href="#" class="menu-toggle nav-link has-dropdown"><i class="fas fa-shopping-basket"></i><span>Transaction</span></a>
        <ul class="dropdown-menu">
          <li class="<%= params[:controller] == 'receptions' ? 'active' : '' %>">
            <a href="<%= receptions_path %>" class="nav-link <%= params[:controller] == 'receptions' ? 'toggled' : '' %>">
              <span>Reception</span>
            </a>
          </li>
          <li class="<%= params[:controller] == 'order_headers' ? 'active' : '' %>">
            <a href="<%= order_headers_path %>" class="nav-link <%= params[:controller] == 'order_headers' ? 'toggled' : '' %>">
              <span>Order</span>
            </a>
          </li>
        </ul>
      </li>
    </ul>
  </aside>
</div>